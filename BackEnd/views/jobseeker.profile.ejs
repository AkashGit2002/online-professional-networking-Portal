<body>






	<div class="container">
		<div class="text-center signup-heading">
			
			Jobseeker profile
		</div>



		<form class="needs-validation" action="/jobseeker_data" method="POST" novalidate>
			<div class="form-row">
				
				<div class="col-lg-12 mb-3">
					<label> Full Name*</label>
					<input type="text" class="form-control" id="validationCustom01" name="fullname"  value="">
				</div>
				<div class="col-lg-12 mb-3">
					<label> Description*</label>
					<input type="text" class="form-control" id="validationCustom01"name="descrip" value="">
				</div>
				<div class="col-lg-12 mb-3">
					<label>College Name*</label>
					<input type="text" class="form-control" id="validationCustom02" name="college"placeholder="" value="">
				</div>
				<div class="col-lg-12 mb-3">
					<label>School Name*</label>
					<input type="text" class="form-control" id="validationCustom02" name="school"placeholder="" value="">
				</div>
				<div class="col-lg-12 mb-3">
					<label>Marks in 12*</label>
					<input type="text" class="form-control" id="validationCustom02" name="marksten"placeholder="" value="">
				</div>
				<div class="col-lg-12 mb-3">
					<label>Marks in 10*</label>
					<input type="text" class="form-control" id="validationCustom02" name="markstwe"placeholder="" value="">
				</div>
				<div class="col-lg-12 mb-3">
					<label for="exampleFormControlTextarea1">Degree*</label>
					<textarea class="form-control" id="exampleFormControlTextarea1" name="degree"rows="1"></textarea>
				</div>
				<div class="col-lg-12 mb-3">
					<label for="exampleFormControlTextarea1">Stream*</label>
					<textarea class="form-control" id="exampleFormControlTextarea1" name="stream"rows="1"></textarea>
				</div>
				<div class="col-lg-12 mb-3">
					<label>Degisnation*</label>
					<input type="text" class="form-control" id="validationCustom01" name="degis"value="">
				</div>
				<div class="col-lg-12 mb-3">
					<label>Peffered Location-1*</label>
					<input type="text" class="form-control" id="validationCustom01" name="peffer1"value="">
				</div>
				
				<div class="col-lg-12 mb-3">
					<label>Peffered Location-2*</label>
					<input type="text" class="form-control" id="validationCustom01" name="peffer2"value="">
				</div>

				<div class="col-lg-12 mb-3">
					<label>Peffered Location-3*</label>
					<input type="text" class="form-control" id="validationCustom01" name="peffer3"value="">
				</div>
			<div class="col-lg-12 mb-3">
				<label>Skills*</label>
				<input type="text" class="form-control" id="validationCustom01" name="skills"value="">
			</div><br>
			<div class="col-lg-12 mb-3">
				<label> Upload Your Certificates</label><br>
			<input type="file" name="name"name="" multiple="multiple">
			</div>
			<div class="col-lg-12 mb-3">
				<label> Upload Your Resume &nbsp;&nbsp;<b style="color:red">Only .pdf format is acceptable and file Size 2MB(Maximum)*</b></label><br>
				<input type="file" name="name"name="">
			</div>
			<div class="col-lg-12 mb-3">
				<label> Upload Your Profile Photo &nbsp;&nbsp;<b style="color:red">(Only .jpg,.jpeg  format is acceptable and Maximum size 4MB)*</b></label><br>
				<input type="file" name="name"name="">
			</div>
			<div class="col-lg-12 mb-3">
				<b>Choose the Job-Type</b>
				<select name="" id="" name="">
					<option value="fulltime">Full-Time</option>
					<option value="parttime">Part-Time</option>
					<option value="contract">Contract</option>
					<option value="internship">InternShip</option>
				</select>
			</div>
			<div class="col-lg-12 mb-3">
				<label> Minimum base pay*</label><br>
				<input type="text" class="form-control" id="validationCustom02"name="" placeholder="" value="">
			</div>
		
			<div class="col-lg-12 mb-3">
				<label> <b>Please Metion your Job Title*</b>
					 </label><br>
				<input type="text" class="form-control" id="validationCustom02" name=""placeholder="" value="">
			</div>
			<div class="col-lg-12 mb-3">
				<label> <b>Mention Your Industry*</b>
					  </label><br>
				<input type="text" class="form-control" id="validationCustom02"name="" placeholder="" value="">
			</div>
			
			
		</form>
	</div>


	<div class="text-center">
		<button type="button" class="btn btn-primary" onclick="singin()"> submit </button>
	</div>

